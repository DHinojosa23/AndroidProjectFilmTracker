<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutQuizMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textViewQuestions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:padding="25dp"
            android:text="Natalie Portman ganó el Óscar a Mejor Actriz por:"
            android:textAlignment="center"
            android:textColor="#084a83"
            android:textSize="22sp" />


        <RelativeLayout
            android:id="@+id/relativeLayoutAnswers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:padding="25dp">


            <TextView
                android:id="@+id/textViewBait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Enviales un email a tus amigos mostrandole tu puntuación ¡¡ a ver si consiguen superarte !!"
                android:textAlignment="center"
                android:textSize="20sp"
                android:visibility="gone" />


            <RadioGroup
                android:id="@+id/radioGroupAnswers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioButtonOp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="V de Vendetta"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radioButtonOp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Black Swan"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radioButtonOp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Torrente 3"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radioButtonOp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="El profesional (Léon)"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/checkBoxOp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leonardo DiCaprio"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/checkBoxOp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Antonio Resines"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/checkBoxOp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matthew McConaughey"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/checkBoxOp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brad Pitt"
                    android:textSize="20sp"
                    android:visibility="gone" />


            </RadioGroup>


        </RelativeLayout>

        <ImageView
            android:id="@+id/imageViewBackground"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.3"
            app:srcCompat="@drawable/logoquiz" />

    </LinearLayout>


    <Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:backgroundTint="#084a83"
        android:padding="20dp"
        android:text="CONTINUAR"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />


</RelativeLayout>